<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_id"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="#00FDF7F7"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardBackgroundColor="#00FFFFFF"
    cardview:cardCornerRadius="0dp"
    cardview:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000278A1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/butterflyImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/butterflyName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Butterfly Name"
            android:textColor="#2d2d2d"
            android:textSize="13sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>